<div class="formulario">
<%= form_tag({controller: "injection", action: "search"}, method: "post") do %>
    <%= label_tag(:q, "Procurar Contatos:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Procurar") %>
<% end %>


<h1><%=
if @phones.blank?
else
    for item in @phones
        item
    end
end    
%>
</h1>
</div>

<style type="text/css">
 input#q{
    border-radius: 2%
 }
 body{
    background-color: azure
 }
 .formulario{
	width: 500px;
	height: 50px;
	border-color: red;
	
	position: absolute;
	top:0;
	bottom: 0;
	left: 0;
	right: 0;
  	
	margin: auto;
 }
</style>